[alias]
        st = status
        ci = commit
        br = branch
        co = checkout
        df = diff
        lg = log --graph --pretty=tformat:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
        g = "!f() { gitg . $1; }; f"
	d = difftool
        bd = "!f() { git branch -D $1 && git push origin --delete $1; }; f"
[core]
	editor = vim
	pager =
	autocrlf = input
[diff]
	tool = vimdiff
[difftool]
	prompt = false
[color]
        diff = auto
[user]
	name = Stanislav Savulchik
	email = s.savulchik@gmail.com
[push]
	default = current
[pull]
	rebase = true
[fetch]
	prune = true
[branch "master"]
	mergeoptions = --no-ff
[rerere]
	enabled = true
	autoupdate = true
